include ../../mixins/paragraph.pug
include ../../mixins/card.pug
include ../../mixins/form.pug

// Full Pic Background
.view.hm-black-strong
  .full-bg-img.flex-center

    .container
      #home.row

        // First column
        .col-lg-6
          .description.smooth-scroll
            +paragraph("The Larson Agency, LLC")(class="wow fadeInLeft")
              h5.wow.fadeInLeft(data-wow-delay='0.4s')
                | The Consultancy of Bobby Larson
              p.wow.fadeInLeft(data-wow-delay='0.6s')
                | Bobby is an avid technologist and open source advocate that
                | likes to spend his spare time building robots and exploring
                | new ideas and technologies.
              br
              p.wow.fadeInLeft(data-wow-delay='0.8s')
                | When Bobby isn't experimenting with life or performance
                | hacks, he can be found playing an instrument or passing time
                | in his kitchen honing his skills as a chef of modernist
                | cuisine.
              br
              a.btn.btn-ptc.wow.fadeInLeft(href='#about', data-wow-delay='0.7s') Learn more

        // Second column
        .col-lg-6
          // Form
          +basiccard()(class="wow fadeInRight")
            // Body
            +contactform("Reach Out", "and contact Bobby", "Contact")
